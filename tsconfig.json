{
  "include": ["src", "types"],
  "exclude": ["node_modules", "build"],
  "compilerOptions": {
    "module": "esnext",
    "target": "es6",
    "lib": ["dom", "esnext"],
    "moduleResolution": "node",
    "allowJs": true,
    "jsx": "react-jsx",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"]
    },
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true
  }
}
